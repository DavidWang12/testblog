<h3 class="blog-post">
	<%= @post.title %>
</h3>

<p class="blog-post">
  <%= @post.content %>
</p>

<h4>Comments</h4>
<% if @comments.count > 0 %>
	<% @comments.each do |comment| %>
		<p class="comment"> <%= comment.content %> <br> Posted: <%= comment.created_at %>
			<%= link_to 'Edit', edit_comment_path(comment) %> 
			<%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %></p>

	<% end %>
<% end %>

<br/>
