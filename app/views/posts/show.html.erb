<% if @comments.count > 0 %>
	<% @comments.each do |comment| %>
	<p class="comment"> <%= comment.content %> <br> Posted: <%= comment.created_at %> </p>
	<% end %>
<% end %>

<br>

<h4>New Comment</h4>
<%= render 'comment_form' %>



